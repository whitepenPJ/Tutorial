@model Tutorial.Models.Department

@{
	var ControllerName = this.ViewContext.RouteData.Values["controller"] as string;
    ViewBag.Title = "Department";
	ViewBag.Action = "Create";
	Layout = "/Views/Shared/Gentelella/_LayoutAdmin.cshtml";
}
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>@ViewBag.Title <small>@ViewBag.Action</small></h2>
                <div class="clearfix"></div>
            </div>
			<div class="x_content">
                <br>
				@using (Html.BeginForm("Create", ControllerName, FormMethod.Post, new { @class = "form-horizontal form-label-left", novalidate = "" }))
				{
					@Html.ValidationSummary(true)
					@Html.Partial("_CreateOrEdit", Model)

                    <div class="ln_solid"></div>
                    <div class="form-group">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                            <button type="submit" class="btn btn-success">Submit</button>
                            <a href="@Url.Action("Index")" class="btn btn-primary">Back</a>                            
                        </div>
                    </div>
				}
			</div>
        </div>
    </div>
</div>
