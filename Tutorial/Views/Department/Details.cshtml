@model Tutorial.Models.Department

@{
	var ControllerName = this.ViewContext.RouteData.Values["controller"] as string;
    ViewBag.Title = "Department";
	ViewBag.Action = "Details";
	Layout = "/Views/Shared/Gentelella/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>@ViewBag.Title <small>@ViewBag.Action</small></h2>
                <div class="clearfix"></div>
            </div>
			<div class="x_content">
                <br>
				<form class="form-horizontal form-label-left" novalidate="">
					@Html.ValidationSummary(true)
					@Html.Partial("_CreateOrEdit", Model, new ViewDataDictionary { { "readonly", true } })

                    <div class="ln_solid"></div>
                    <div class="form-group">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
															<a href="@Url.Action("Edit", new { id=Model.Id })" class="btn btn-primary">Edit</a>
							                            <a href="@Url.Action("Index")" class="btn btn-primary">Back</a>
                        </div>
                    </div>
				</form>
			</div>
        </div>
    </div>
</div>
